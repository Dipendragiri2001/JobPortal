@model Job
 	<link rel="stylesheet" type="text/css" href="/assets/plugins/tagcomplete/tagcomplete.css">

 <div class="page-content bg-white">
        <!-- contact area -->
        <div class="content-block">
			<!-- Browse Jobs -->
			<div class="section-full bg-white p-t50 p-b20">
				<div class="container">
					<div class="row">
						<div class="col-xl-3 col-lg-4 m-b30">
							<div class="sticky-top">
								<div class="candidate-info company-info">

<partial name="_EmployerSidebar.cshtml"/>
																	</div>
							</div>
						</div>
						<div class="col-xl-9 col-lg-8 m-b30">
							<div class="job-bx submit-resume">
								<div class="job-bx-title clearfix">
									<h5 class="font-weight-700 pull-left text-uppercase">Post A Job</h5>
									<a href="company-profile.html" class="site-button right-arrow button-sm float-right">Back</a>
								</div>
								<form asp-action="CreateJob">
									<div class="row">
										<div class="col-lg-6 col-md-6">
											<div class="form-group">
												<label>Job Title</label>
												<input type="text" asp-for="Title" class="form-control" placeholder="Enter Job Title">
											</div>
										</div>
										<div class="col-lg-6 col-md-6">
											<div class="form-group">
												<label>Company email</label>
												<input type="email" asp-for="Email" class="form-control" value="@ViewBag.email" readonly>
											</div>
										</div>
										<div class="col-lg-12 col-md-12">
											<div class="form-group">
												<label>Job Tags</label>
												<input type="text" asp-for="Tags" class="form-control tags_input" value="MySQL, c++, PhotoShop "/>
											</div>
										</div>
										<div class="col-lg-6 col-md-6">
											<div class="form-group">
												<label>Job Type</label>
												<select asp-for="Type">
													<option>Full Time</option>
													<option>Part Time</option>
													<option>Internship</option>
													<option>Freelance</option>
												</select>
											</div>
										</div>
										<div class="col-lg-6 col-md-6">
											<div class="form-group">
												<label>Experience</label>
												<select asp-for="Experience">
													<option>1 Years</option>
													<option>2 Years</option>
													<option>3 Years</option>
													<option>4 Years</option>
													<option>5 Years</option>
												</select>
											</div>
										</div>
										<div class="col-lg-6 col-md-6">
											<div class="form-group">
												<label>Job Category</label>
												<select asp-for="Category">
													<option>IT</option>
													<option>Finance</option>
													<option>Banking</option>
													<option>Networking</option>
													<option>Enginering</option>
												</select>
											</div>
										</div>
										<div class="col-lg-6 col-md-6">
											<div class="form-group">
												<label>Openings</label>
												<input type="number" asp-for="Opening" class="form-control" value="2">
											</div>
										</div>
										<div class="col-lg-6 col-md-6">
											<div class="form-group">
												<label>City</label>
												<input type="text" asp-for="City" class="form-control" >
											</div>
										</div>
										<div class="col-lg-6 col-md-6">
											<div class="form-group">
												<label>Job Location</label>
												<input type="text" asp-for="Location" class="form-control" placeholder="New Baneshwor">
											</div>
										</div>
										<div class="col-lg-6 col-md-6">
											<div class="form-group">
												<label>Minimum Salary ($):</label>
												<input type="text" asp-for="MinSalary" class="form-control" placeholder="10000">
											</div>
										</div>
										<div class="col-lg-6 col-md-6">
											<div class="form-group">
												<label>Maximum Salary ($):</label>
												<input type="text" asp-for="MaxSalary" class="form-control" placeholder="20000">
											</div>
										</div>
										<div class="col-lg-12 col-md-12">
											<div class="form-group">
												<label>Description:</label>
												<textarea type="text" asp-for="Description" class="form-control" placeholder="Describe about job"> </textarea>
											</div>
										</div>
										<div class="col-lg-12 col-md-12">
											<div class="form-group">
												<label>Requirement:</label>
												<textarea type="text" asp-for="Requirement" class="form-control" placeholder="Requirements"> </textarea>
											</div>
										</div>
										<div class="col-lg-12 col-md-12">
											<div class="form-group">
												<label>Responsibilities:</label>
												<textarea type="text" asp-for="Responsibility" class="form-control" placeholder="Requirements"> </textarea>
											</div>
										</div>
										<div class="col-lg-12 col-md-12">
											<div class="form-group">
												<label>Benfits:</label>
												<textarea type="text" asp-for="Benefits" class="form-control" placeholder="Requirements"> </textarea>
											</div>
										</div>


									</div>
									<button type="submit" class="site-button m-b30">POST</button>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
            <!-- Browse Jobs END -->
		</div>
    </div>
    <!-- Content END-->
	<!-- Modal Box -->

    <script src="/assets/js/jquery.min.js"></script><!-- JQUERY.MIN JS -->

    <script src="/assets/plugins/tagcomplete/tagcomplete.js"></script><!-- TAGCOMPLETE -->
    <script>
	$(function(){
		var data = [

			'php',
			'jquery'
		];

		$(".tags_input").tagComplete({

			keylimit: 1,
			hide: false,
			autocomplete: {
				data: data
			}
		});
	});
</script>